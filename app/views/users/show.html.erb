<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />

       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">

           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>
<br>
<% if user_has_posts(@user) %>
   <h2>Posts</h2>
   <%= render @user.posts %>
<% else %>
  <p><i>
    <%= @user.name.to_s + " has not submitted any posts yet." %>
  </i></p>
<% end %>

<% if user_has_comments(@user) %>
   <h2>Comments</h2>
   <%= render @user.comments %>
<% else %>
  <p><i>
    <%= @user.name.to_s + " has not submitted any comments yet." %>
  </i></p>
<% end %>

<% if user_has_favorites(@user) %>
   <h2>Favorited Posts</h2>
   <%= render "favorites/fav", locals: {user: @user} %>
<% else %>
  <p><i>
    <%= @user.name.to_s + " has not favorited any posts yet." %>
  </i></p>
<% end %>
